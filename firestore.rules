rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to citizenshipDaily collection
    // Allow write only if document doesn't exist (to prevent overwriting)
    match /citizenshipDaily/{document} {
      allow read: if true;
      // Allow write if document doesn't exist (for client-side generation fallback)
      allow create: if true;
      allow update, delete: if false;
    }
  }
}

